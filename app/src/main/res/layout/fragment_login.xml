<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_fragment"
    tools:context="com.password.manager.login_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Login"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_name"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:layout_below="@id/textView3"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="16"
            android:id="@+id/input_password"
            android:layout_marginTop="10dp"
            android:layout_below="@id/input_name"
            android:layout_alignRight="@id/input_name"
            android:layout_alignEnd="@id/input_name"
            android:layout_alignLeft="@id/input_name"
            android:layout_alignStart="@id/input_name" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/login_button"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:layout_below="@id/input_password"
            android:layout_alignRight="@id/input_password"
            android:layout_alignEnd="@id/input_password" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_login_create_user_button"
            android:id="@+id/create_user"
            android:layout_alignBottom="@+id/login_button"
            android:layout_toLeftOf="@+id/login_button"
            android:layout_toStartOf="@+id/login_button" />

    </RelativeLayout>

</FrameLayout>
